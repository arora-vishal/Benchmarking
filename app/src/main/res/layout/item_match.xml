<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_match_number"
        tools:text="ODI 1 of 48"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="Thu, 5 Oct"
        android:textStyle="bold"
        android:id="@+id/tv_match_date"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_first_nation_flag"
        app:layout_constraintTop_toBottomOf="@id/tv_match_number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:contentDescription="First Nation Flag" />

    <TextView
        android:id="@+id/tv_first_nation_name"
        android:layout_marginStart="16dp"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/iv_first_nation_flag"
        app:layout_constraintTop_toTopOf="@id/iv_first_nation_flag"
        app:layout_constraintBottom_toBottomOf="@id/iv_first_nation_flag"
        tools:text="England"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_second_nation_flag"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_first_nation_flag"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:contentDescription="First Nation Flag" />

    <TextView
        android:id="@+id/tv_second_nation_name"
        tools:text="New Zealand"
        app:layout_constraintStart_toEndOf="@id/iv_second_nation_flag"
        app:layout_constraintTop_toTopOf="@id/iv_second_nation_flag"
        app:layout_constraintBottom_toBottomOf="@id/iv_second_nation_flag"
        android:layout_marginStart="16dp"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_match_time"
        tools:text="Starts at 2:00 pm"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_second_nation_flag"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>